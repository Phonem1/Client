<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anewtech.phone.client">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SurveyActivity.TouchActivity">

        </activity>
        <activity android:name=".SurveyActivity.FragmentLayout"
            android:configChanges="orientation|screenLayout">
            <meta-data
                android:name="RECOGNIZE_MODE"
                android:value="1" />
        </activity>
        <activity android:name=".SurveyActivity.SubFragmentLayout"
            android:configChanges="orientation|screenLayout">
            <meta-data
                android:name="RECOGNIZE_MODE"
                android:value="1" />
        </activity>

        <service android:name=".SurveyActivity.Services.SpeechService" />
    </application>



</manifest>